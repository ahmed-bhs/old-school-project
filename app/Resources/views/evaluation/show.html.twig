{% extends 'PetkoparaCrudGeneratorBundle::base.html.twig' %}

{% block title %}
{{ parent() }} - evaluation
{% endblock %}

{% block body %}

 

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ evaluation.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Description</strong></p>
        <p>
            {{ evaluation.description }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Coef</strong></p>
        <p>
            {{ evaluation.coef }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Date</strong></p>
        <p>
            {% if evaluation.date %}{{ evaluation.date|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('evaluation') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Retourner vers la liste
    </a>
    <a class="btn btn-primary" href="{{ path('evaluation_edit', { 'id':  evaluation.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('evaluation_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      Ajouter
    </a>
    <form action="{{ path('evaluation_delete', { 'id': evaluation.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Supprimer
        </button>
    </form>
</div>


{% endblock %}

