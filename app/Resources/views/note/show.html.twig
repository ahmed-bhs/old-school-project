{% extends 'PetkoparaCrudGeneratorBundle::base.html.twig' %}

{% block title %}
{{ parent() }} - note
{% endblock %}

{% block body %}

 

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ note.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Valeur</strong></p>
        <p>
            {{ note.valeur }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('note') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Retourner vers la liste
    </a>
    <a class="btn btn-primary" href="{{ path('note_edit', { 'id':  note.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
  {#   <a class="btn btn-info" href="{{ path('note_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a> #}
    <form action="{{ path('note_delete', { 'id': note.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Supprimer
        </button>
    </form>
</div>


{% endblock %}

