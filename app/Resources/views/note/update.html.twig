                    <tr>
                        
                        <th>id</th>
                        <th>nom</th>
                        <th>prenom</th>
                        <th>note</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in students %}
                    <tr>
                        <td>

{{item.id}} </td><td>{{item.nom}}</td><td>{{item.prenom}}</td><td><input type="text" class="form-control" name="note{{item.id}}" value="{% for i in  item.notes %}{% if i.evaluation.id == id %}{{i.valeur}}{% endif %}{% endfor %}"></td>

