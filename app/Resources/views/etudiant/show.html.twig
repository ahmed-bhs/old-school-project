{% extends 'PetkoparaCrudGeneratorBundle::base.html.twig' %}

{% block title %}
{{ parent() }} - etudiant
{% endblock %}

{% block body %}

<div id="top" class="row">
 

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ etudiant.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Nom</strong></p>
        <p>
            {{ etudiant.nom }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Prenom</strong></p>
        <p>
            {{ etudiant.prenom }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Status</strong></p>
        <p>
            {% if etudiant.status %}Yes{% else %}No{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Datenaissance</strong></p>
        <p>
            {% if etudiant.dateNaissance %}{{ etudiant.dateNaissance|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Adresse</strong></p>
        <p>
            {{ etudiant.adresse }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Nompere</strong></p>
        <p>
            {{ etudiant.nomPere }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Nommere</strong></p>
        <p>
            {{ etudiant.nomMere }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Numerotel</strong></p>
        <p>
            {{ etudiant.numeroTel }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Genre</strong></p>
        <p>
            {{ etudiant.genre }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('eleve') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Retourner vers la liste
    </a>
    <a class="btn btn-primary" href="{{ path('eleve_edit', { 'id':  etudiant.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      Modifer
    </a>
    <a class="btn btn-info" href="{{ path('eleve_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      Ajouter
    </a>
    <form action="{{ path('eleve_delete', { 'id': etudiant.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

