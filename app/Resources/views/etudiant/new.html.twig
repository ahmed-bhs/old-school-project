{% extends 'PetkoparaCrudGeneratorBundle::base.html.twig' %}

{% block title %}
{{ parent() }} - Nouvel Elève
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>Nouveau Elève<span class="glyphicon glyphicon-file" aria-hidden="true"></span> </h2>
    </div>
</div>
    
    
 
<div class="row">
    <div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    <script>
    $(document).ready(function() {
  $(".js-example-basic-single1").select2({
  placeholder: "Choisissez une évaluation",
  allowClear: true
});
});

</script>
 


    {{ form_start(form) }}


    <div class="col-md-6">
    {{ form_row(form.nom) }}
       {{ form_row(form.prenom) }}
        {{ form_row(form.genre) }}
         {{ form_row(form.dateNaissance) }}
    <strong>Classe</strong><br>{{ form_widget(form.classe,{'attr':{'class':'js-example-basic-single1 form-control','style':'width:535px; '}}) }}<br>
</div>  <div class="col-md-6">
 {{ form_widget(form.status,{'attr':{'class':'js-switch','checked':'checked'}}) }}

    
    {{ form_rest(form) }}</div></div>
    <br><br><br>  <br><br><br>  <br><br><br>
    <p>
        <button type="submit" name="submit" value="save" class="btn btn-primary"> 
            Enregistrer  <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        </button>
        <button type="submit" name="submit" value="saveAndAdd" class="btn btn-info"> 
              Enregistrer et ajouter <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
    </p>


    {{ form_end(form) }}

    <hr/>

<div class="form-group">
    <a class="btn btn-default" href="{{ path('eleve') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
      Retourner vers la liste
    </a>
</div>

</div>

<script type="text/javascript">    var elem = document.querySelector('.js-switch');

var switchery = new Switchery(elem, { color: '#7c8bc7', jackColor: '#9decff' });
</script>
{% endblock %}

