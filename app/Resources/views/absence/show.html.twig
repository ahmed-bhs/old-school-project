{% extends 'PetkoparaCrudGeneratorBundle::base.html.twig' %}

{% block title %}
{{ parent() }} - absence
{% endblock %}

{% block body %}

 

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ absence.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Nombre</strong></p>
        <p>
            {{ absence.nombre }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('absence') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Retourner vers la liste
    </a>
    <a class="btn btn-primary" href="{{ path('absence_edit', { 'id':  absence.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Editer
    </a>
    <a class="btn btn-info" href="{{ path('absence_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Ajouter
    </a>
    <form action="{{ path('absence_delete', { 'id': absence.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Supprimer
        </button>
    </form>
</div>


{% endblock %}

